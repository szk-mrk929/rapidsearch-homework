{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@@*": ["src/*"]
    },
    "noImplicitAny": false
  },
  "include": ["index.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
